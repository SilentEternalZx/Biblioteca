@{
    ViewData["Title"] = "Inicio";
}


@* Estilo css de la vista principal *@

<style>
    body {
        background-image: url('@Url.Content("~/icons/wallpapersden.com_i-love-coding-log_3840x2400.jpg")');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        font-family: "Red Hat Text", sans-serif;
        font-optical-sizing: auto;
        font-weight: 400;
        font-style: italic;
    }

        body::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.5));
            z-index: 1;
        }

    .container-fluid {
        position: relative;
        z-index: 2;
    }

    .title-text {
        color: white !important;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    }

    .card {
        backdrop-filter: blur(10px);
        background-color: rgba(255, 255, 255, 0.95);
        border-radius: 15px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2) !important;
        }

    .card-text {
        color: #2c3e50 !important;
        line-height: 1.6;
    }

    .text-muted {
        color: #576574 !important;
    }

    .card-body {
        padding: 3rem !important;
    }

    .text-primary {
        color: #3498db !important;
    }

    .fas.fa-books {
        font-size: 3.5rem;
        margin-bottom: 1.5rem;
        color: darkviolet;
    }

    hr {
        border-color: rgba(0, 0, 0, 0.1);
        margin: 2rem 0;
    }

    .lead {
        font-size: 1.4rem;
        margin-bottom: 2rem;
    }

    .display-4 {
        font-size: 3.2rem;
        margin-bottom: 1rem;
    }

    .small {
        font-size: 0.9rem;
        opacity: 0.9;
    }

    /* Efecto de brillo para iconos */
    .fas {
        transition: color 0.3s ease;
    }

        .fas:hover {
            color: #2980b9 !important;
        }
</style>


@* HTML de vista principal
 *@

<div class="container-fluid px-4 py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold title-text mb-4">Bienvenido al Panel de Administración</h1>
        <p class="lead title-text">Sistema de Gestión de Biblioteca</p>
    </div>
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg">
                <div class="card-body p-5 text-center">
                    <i class="fas fa-book-reader fa-4x text-primary mb-4"></i>
                    <h2 class="h3 mb-4 card-text">Gestiona tu Biblioteca Digital</h2>
                    <p class="card-text mb-4">
                        Desde este panel podrás administrar todos los aspectos de tu biblioteca:
                        libros, autores, categorías y más. Disfruta de una experiencia de gestión
                        intuitiva y eficiente.
                    </p>
                    <hr class="my-4">
                    <p class="small card-text">
                        Utiliza el menú de navegación para acceder a las diferentes secciones del sistema.
                        Todas las herramientas que necesitas están a solo un clic de distancia.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>