@{
    ViewData["Title"] = "Inicio";
}

<style>
    
    body {
        background-color: #E7473C;
        font-family: "Red Hat Text", sans-serif;
        font-optical-sizing: auto;
        font-weight: 400;
        font-style: italic;
    }

    .library-container {
        text-align: center;
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px 20px;
    }

    .main-title {
        color: #F0F0F0;
        font-size: 2.5rem;
        margin-bottom: 30px;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
        font-weight: bold;
    }

    .section-title {
        color: black;
        font-size: 1.8rem;
        margin-bottom: 40px;
        font-style:unset;
    }

    .books-row {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
    }

    .book-card {
        position: relative;
        width: 200px;
        height: 300px;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 6px 12px rgba(0,0,0,0.2);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .book-card:hover {
            transform: scale(1.05);
            box-shadow: 0 10px 20px rgba(0,0,0,0.3);
        }

        .book-card img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
</style>

<div class="library-container">
    <h1 class="main-title">Sistema Virtual de Bibliotecas</h1>

    <div class="section-title">
        <h2>¡Nuestros libros más leídos!</h2>
    </div>

    <div class="books-row">
        <div class="book-card">
            <img src="~/icons/canva-brown-rusty-mystery-novel-book-cover-hG1QhA7BiBU.jpg" alt="Libro 1" />
        </div>
        <div class="book-card">
            <img src="~/icons/it-9781982127794_hr.jpg" alt="Libro 2" />
        </div>
        <div class="book-card">
            <img src="~/icons/tlp_hero_book-cover-adb8a02f82394b605711f8632a44488b.jpg" alt="Libro 3" />
        </div>
        <div class="book-card">
            <img src="~/icons/large_99efb4a0449f950cda20ec5bddc93267.jpg" alt="Libro 4" />
        </div>
        <div class="book-card">
            <img src="~/icons/template-1.png" alt="Libro 5" />
        </div>
        <div class="book-card">
            <img src="~/icons/1449878132-9781781100264.jpg" alt="Libro 6" />
        </div>
    </div>
</div>