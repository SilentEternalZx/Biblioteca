@model CRUDJulianCarmonaEF.Models.Editoriale

@{
    ViewData["Title"] = "Details";
}
@* Importación de estilo *@
@await Html.PartialAsync("Detalle")




@* Cuadro que muestra el detalle de la tabla
 *@
<div class="container book-details">
    <div class="book-header">
        <h1 class="book-title">Detalle editoriales</h1>

    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="info-group">
                <div class="info-label">Nit</div>
                <div class="info-value">@Model.Nit</div>
            </div>



            <div class="row">
                <div class="col-md-6">
                    <div class="info-group">
                        <div class="info-label">Nombre</div>
                        <div class="info-value">@Model.Nombres</div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="info-group">
                            <div class="info-label">Teléfono</div>
                            <div class="info-value">@Model.Telefono</div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="info-group">
                                <div class="info-label">Dirección</div>
                                <div class="info-value">@Model.Direccion</div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="info-group">
                                    <div class="info-label">Email</div>
                                    <div class="info-value">@Model.Email</div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="info-group">
                                        <div class="info-label">Sitio web</div>
                                        <div class="info-value">@Model.Sitioweb</div>
                                    </div>
                                </div>

                             
</div>
</div>

</div>

</div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="book-cover" style="background-color: #f8f9fa; height: 300px; border-radius: 10px; display: flex; align-items: center; justify-content: center;">
                <i class="fas fa-book fa-4x text-muted"></i>
            </div>
        </div>
    </div>

    <div class="action-buttons">
        <a asp-action="Edit" asp-route-id="@Model?.Nit" class="btn-custom btn-edit">
            <i class="fas fa-edit me-2"></i>Editar
        </a>
        <a asp-action="Index" class="btn-custom btn-back">
            <i class="fas fa-arrow-left me-2"></i>Volver
        </a>
    </div>
</div>